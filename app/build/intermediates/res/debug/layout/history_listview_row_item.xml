<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerItemLayout"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@android:color/transparent">

    <ImageView
        android:id="@+id/imgViewDrawerItemIcon"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/form_icon_small" 
        android:contentDescription="img"
        android:layout_alignParentLeft="true"
        />

    <LinearLayout
        android:id="@+id/linearLayout_history"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_toRightOf="@id/imgViewDrawerItemIcon"
        android:layout_marginLeft="10dp"
        android:baselineAligned="@id/imgViewDrawerItemIcon"
        android:gravity="center_vertical"
        >

        <TextView
            android:id="@+id/tv_history_form_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="18sp"
            android:text="Form Name"
             />

        <TextView
            android:id="@+id/tv_history_created_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="13sp" 
            android:text=""
            android:layout_marginTop="5dp"
            />
    </LinearLayout>

    <ImageView 
        android:id="@+id/imgCheck"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:contentDescription="checked"
        android:baselineAligned="@id/imgViewDrawerItemIcon"
        android:layout_alignParentRight="true"
        android:src="@drawable/check_blue"
        android:scaleType="matrix"
        android:layout_marginTop="12dp"
        />

</RelativeLayout><!-- From: file:/C:/AndroidStudioWorkspace/xavey-android/app/src/main/res/layout/history_listview_row_item.xml -->