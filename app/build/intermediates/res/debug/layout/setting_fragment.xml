<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
     >

    <TextView
        android:id="@+id/tvSettingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/action_settings"
        android:textSize="20sp" />
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#8A92A1"
        android:layout_below="@id/tvSettingTitle"
        android:layout_marginTop="3dp"
        />

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical"
       	android:layout_below="@id/tvSettingTitle"
       	android:layout_marginTop="5dp"
        >
        
        
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Font Setting"
        android:textSize="16sp" />

    <RadioGroup
        android:id="@+id/fontRadioGroupSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_marginTop="5dp"
        >

        <RadioButton
            android:id="@+id/rb_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Default" 
            android:textSize="14sp"
            />

        <RadioButton
            android:id="@+id/rb_zawgyi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zawgyi" 
            android:textSize="14sp"
            />

        <RadioButton
            android:id="@+id/rb_myanmar3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Myanmar3" 
            android:textSize="14sp"
            />
    </RadioGroup>
        
    </LinearLayout>
    
    

</RelativeLayout><!-- From: file:/Users/tinmaungaye/Development/xavey/xavey-android/app/src/main/res/layout/setting_fragment.xml -->